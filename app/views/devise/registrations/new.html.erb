<h2>新規ユーザー作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
  <strong>ユーザー名</strong><br />
  <%= f.text_field :username, autofocus: true %>
  </div>

  <div class="field">
  <strong>ユーザーID</strong><br />
  <%= f.text_field :user_id, autofocus: true %>
  </div>

  <div class="field">
  <strong>サークル名</strong><br />
    <%= f.collection_select :circle_id,Circle.all, :id, :name%>
  </div>

  <div class="field">
    <strong>メールアドレス</strong><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <strong>パスワード</strong>
    <% if @minimum_password_length %>
    <em>(半角英数 <%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <strong>パスワード(確認用)</strong><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
