<h2>
  <strong>タイトル: </strong>
  <%= @post.title %>
</h2>
<br>

<p>
  <strong>日付: </strong>
  <%= @post.today %>
</p>
<p>
  <strong>投稿者:</strong>
  <%= @post.user_id %>
</p>
<br>

<p>
  <%= image_tag(@post.image_url, width: 400) if @post.image.present? %>
</p>
<br>

<p>
  <br>
  <%= @post.body %>
</p>
<br>

<p>
  <strong>Circle:</strong>
  <%= @post.circle_id %>
</p>
<br>
<%= link_to '編集', edit_post_path(@post) %> |
<%= link_to '戻る', circle_path(@post.circle_id) %>
<br>