<h1>記事</h1>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本文</th>
      <th>日付</th>
      <th>画像</th>
      <th>投稿ユーザ</th>
      <th>サークル</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.today %></td>
        <td><%= image_tag post.image_url, width: 50 if post.image.present?%></td>
        <td><%= post.user_id %></td>
        <td><%= post.circle_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '記事を追加', new_post_path %>
